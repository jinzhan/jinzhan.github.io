<div id="toc" class="toc-article">
    <strong class="toc-title">文章目录</strong>
    <%- toc(post.content) %>
</div>
<style>
    .left-col .switch-btn {
        display: none;
    }
    .left-col .switch-area {
        display: none;
    }
</style>

<style>
    /* 新增自定义样式 */
    body {
        background:#fff!important;
    }

    #container .mid-col {
        left: 300px;
    }

    #container .left-col {
        background: rgba(255,255,255,0.85);
        width: 300px;
    }

    .toc-article {
       
        top: 20px;
        bottom: 1em;
       
    }
    .overlay, .intrude-less {
        display: none;
    }

    #container .left-col {
        background:#333 !important;
    }

    .toc-article {
        width: 280px;
        padding-left: 20px;
    }

    .toc-article.post-list {
        background-color: #333;
        padding-left: 50px;
        width: 230px;
    }

    .toc-article.post-list li {
        color: #666;
    }
    

    #post-nav-button {
        left: 260px;
        bottom: 10px;
        top: auto;
    }

    #post-nav-button a {
        background: none !important;
    }

    #scroll {
        top: 50%;
        margin-top: -64px;
        background: #666;
        padding: 5px;
    }
    
    #scroll a {
        background-color: transparent;
        border-color: #999;
    }

    #scroll a:hover {
        color:#fff;
    }

    #scroll a .fa{
        color: #999;
    }

    #article-nav:hover,#article-nav {
        background: #999;
    }
</style>

